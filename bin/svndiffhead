#! /bin/sh
#diff head version with it's previous'

if [ $# -ne 1 -o "$1" = "-h" ] ; then
  echo "Diff head version with it's previous"
  echo "Usage : svndiffhead filename"
  exit 1
fi

svn cat $1 -r PREV > ${1}.prev.c && svn cat $1 -r HEAD > ${1}.head.c && vimdiff ${1}.prev.c ${1}.head.c
rm -f ${1}.prev.c ${1}.head.c

